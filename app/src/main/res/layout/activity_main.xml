<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:weightSum="1">

    <!--  Button to trigger Floating Widget Service -->
    <Button
        android:id="@+id/create_floating_widget"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".33"
        android:onClick="createFloatingWidget"
        android:text="@string/create_floating_widget"
        android:textColor="@color/text_color2"
        android:background="@drawable/button_background"
        android:textSize="20sp" />

    <!--Button to submit feedback -->
    <Button
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".33"
        android:onClick="sendFeedback"
        android:textColor="@color/text_color2"
        android:background="@drawable/button_background"
        android:text="@string/feedback"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"/>

    <!--Button to purchase and remove ads -->
    <Button
        android:id="@+id/removeAds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".33"
        android:textColor="@color/text_color2"
        android:background="@drawable/button_background"
        android:onClick="removeAds"
        android:text="@string/purchase"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_updated"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            style="@android:style/TextAppearance.DeviceDefault.Small"/>
    </LinearLayout>
</LinearLayout>

